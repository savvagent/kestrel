{
  "name": "@robhicks/kestrel",
  "version": "1.0.3",
  "description": "Lightweight isomorphic JavaScript HTTP client",
  "browser": "dist/kestrel.min.js",
  "main": "index.js",
  "module": "dist/kestrel.js",
  "scripts": {
    "build": "rollup -c",
    "build:w": "rollup -cw",
    "mocha": "mocha:w",
    "mocha:w": "mocha -u bdd -R spec -t 5000 --watch test/server-bundle.js",
    "postinstall": "npx rollup -c",
    "start": "run-p build:w mocha:w",
    "test": "mocha -u bdd -R spec -t 5000 test/server-bundle.js"
  },
  "author": "rob@savvagent.com",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.3.4",
    "esm": "^3.2.25",
    "fetch-mock": "^9.11.0",
    "mocha": "^9.0.2",
    "node-fetch": "^2.6.1",
    "sinon": "^11.1.1"
  },
  "dependencies": {
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.52.7",
    "rollup-plugin-live-server": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "tiny-uri": "^9.1.3"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/savvagent/kestrel.git"
  },
  "keywords": [
    "lightweight",
    "isomorphic",
    "javascript",
    "HTTP",
    "client"
  ],
  "bugs": {
    "url": "https://github.com/savvagent/kestrel/issues"
  },
  "homepage": "https://github.com/savvagent/kestrel#readme"
}
